<div class="container">
      <h1> Création d'un nouvel utilisateur !</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >

        <br>
        
       
          <%= text_field_tag 'first_name' %>
          <%= label_tag 'Ton nom' %>
    
          <br>  
        
          <%= text_field_tag 'last_name'%>
          <%= label_tag 'ton prénom' %>
        
          <br>  

        <%= text_field_tag 'email'%>
          <%= label_tag 'Ton mail' %>
          <br>  
        
        <%= text_field_tag 'age'%>
        <%= label_tag 'Ton age' %>
      
        <br>  

        <%= text_field_tag 'city_id'%>
        <%= label_tag 'Ta city id' %>
        <br>  
    
        <%= password_field_tag 'password'%>
        <%= label_tag 'Ton mdp' %>
  
        <br>  

        <%= submit_tag "Valider", class: 'btn btn-primary btn-lg btn-submit col-4'  %>
      <% end %>
    </div>




